<%= title "User Sign In ~ KAPHOO" %>
<div class="container login signup cloud">
	<div class="cloud_1">
		<%= render "accounts/cloud1" %>
	</div>
	<div class="cloud_2">
		<%= render "accounts/cloud2" %>
	</div>
	<div class="cloud_3">
		<%= render "accounts/cloud3" %>
	</div>
	<div class="cloud_4">
		<%= render "accounts/cloud4" %>
	</div>
	<div class="log-in-content">
		<div class="col-md-6 left">
			<h2 class="logo"><%= link_to "KAPHOO", root_path %></h2>
			<div class="cerik"></div>
		</div>

		<div class="col-md-6 right">
			<%= form_for(:session, url: sign_in_path) do |f| %>
				<div class="form-group">
					<div class="ic_on1 ic_on">
						<%= f.email_field :email, class: 'form-control vfr', placeholder: 'Email Address' %>
					</div>
				</div>
				<div class="form-group">
					<div class="ic_on2 ic_on">
						<%= f.password_field :password, class: 'form-control vfr', placeholder: 'Password' %>
						<p><%= link_to "Forgot Password", new_password_reset_path, class: 'text_forget' %></p>
					</div>
				</div>
				<div class="bth-j">
					<%= f.submit "Sign In", class: 'btn btn-primary joi' %>
				</div>
			<% end %>
			<p class="text-center attr">Don't have an Account? <%= link_to "Sign Up", sign_up_path %></p>
		</div>		
	</div>
</div>