<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
  <div class="form-group hsdga5357">
    <%= f.select(:recipients, User.all.where(reviewer: true).collect {|p| [ p.username, p.id ] }, {}, { multiple: true , class: "chosen-select form-control reply_form" })%>
  </div>
  <div class="form-group hsdga5357">
    <%= f.text_field :subject, placeholder: "Subject", class: "form-control reply_form " %>
  </div>
  <div class="form-group hsdga5357">
    <%= f.text_area :body, class: 'form-control reply_form',placeholder: "Type your message here", rows: 4  %>

  </div>

  <%= f.submit "Send Message", class: "niywag" %>
<% end %>
