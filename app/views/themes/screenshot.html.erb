<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title><%= @theme.name %></title>
	<%= stylesheet_link_tag    'screenshot', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'themes', 'data-turbolinks-track' => true %>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	<link href='https://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,500,500italic,700' rel='stylesheet' type='text/css'>
</head>
<body>
	<div class="top-screen">
		<div class="logo pull-left">
			<h4><%= link_to "SixArts", themes_path %></h4>
		</div>
		<div class="separator"></div>
		<div class="themes-name">
			<p><%= link_to @theme.name, theme_path(@theme) %></p>
		</div>
		<div class="lst-img">
			<ul class="indicator-car ksoo">
				<% @theme.screenshots.each_with_index do |tmb, index| %>
				<li data-target="#thiscarousel" data-slide-to="<%= index %>" >
					<%= image_tag tmb.screenshot_url(:thumb) %>
				</li>
				<% end %>
			</ul>
		</div>
		<div class="clear"></div>
	</div>
	<div class="main-screen">
		<div id="thiscarousel" class="carousel" data-ride="carousel">
			<div class="carousel-inner" role="listbox">
				<% @theme.screenshots.each_with_index  do |asset, index| %>
					<div class="item <%= 'active' if index == 0  %>">
						<%= image_tag asset.screenshot %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</body>
</html>