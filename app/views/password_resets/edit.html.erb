<%= title "Reset Password ~ KAPHOO" %>
<div class="container login signup cloud">
  <div class="cloud_1">
    <%= render "accounts/cloud1" %>
  </div>
  <div class="cloud_2">
    <%= render "accounts/cloud2" %>
  </div>
  <div class="cloud_3">
    <%= render "accounts/cloud3" %>
  </div>
  <div class="cloud_4">
    <%= render "accounts/cloud4" %>
  </div>
  <div class="log-in-content">
    <div class="col-md-6 left">
      <h2 class="logo"><%= link_to "KAPHOO", root_path %></h2>
      <div class="cerik"></div>
    </div>
    <div class="col-md-6 right" style="padding-top: 45px;">
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <%= hidden_field_tag :email, @user.email %>
        <div class="form-group">
          <div class="ic_on ic_on2">
            <%= f.password_field :password, class: 'form-control vfr', placeholder: "New password" %>
          </div>
        </div>
        <div class="form-group">
          <div class="ic_on ic_on2">
            <%= f.password_field :password_confirmation, class: 'form-control vfr', placeholder: "New password confirmation", id: "insert_reset" %>
          </div>
        </div>
        <%= f.submit "Update password", class: "btn btn-primary bt_sg joi", id: "btn_reset" %>
      <% end %>
    </div>
  </div>
</div>
