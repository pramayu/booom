<%= title "Reset Password ~ KAPHOO" %>
<div class="container login signup cloud">
  <div class="cloud_1">
    <%= render "accounts/cloud1" %>
  </div>
  <div class="cloud_2">
    <%= render "accounts/cloud2" %>
  </div>
  <div class="cloud_3">
    <%= render "accounts/cloud3" %>
  </div>
  <div class="cloud_4">
    <%= render "accounts/cloud4" %>
  </div>
  <div class="log-in-content">
    <div class="col-md-6 left">
      <h2 class="logo"><%= link_to "KAPHOO", root_path %></h2>
      <div class="cerik"></div>
    </div>
    <div class="col-md-6 right" style="padding-top: 65px;">
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <div class="form-group">	
          <div class="ic_on ic_on0">
            <%= f.email_field :email, class: 'form-control vfr', placeholder: "Email address", id: "insert_reset" %>
          </div>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary bt_sg joi", id: "btn_reset" %>
      <% end %>
    </div>
  </div>
</div>
