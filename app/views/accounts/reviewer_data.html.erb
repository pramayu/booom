        <%= form_for @user do |f| %>
          <div class="sod data-acct">
            <div class="col-md-6 mk" style="padding-left: 0px;">
              <div class="form-group fk">
                <span class="fl">First Name</span>
                <div class="fs">
                  <%= f.text_field :first_n, class: "form-control sami" %>
                </div>
              </div>
            </div>
            <div class="col-md-6 mk" style="padding-right: 0px;">
              <div class="form-group fk">
                <span class="fl">Last Name</span>
                <div class="fs">
                  <%= f.text_field :last_n, class: "form-control sami" %>
                </div>
              </div>
            </div>
            <div class="clear"></div>
            <div class="form-group fk">
              <span class="fl">Username</span>
              <div class="fs">
                <%= f.text_field :username, class: "form-control sami" %>
              </div>
            </div>
            <div class="form-group fk">
              <span class="fl">Email Address</span>
              <div class="fs">
                <%= f.email_field :email, class: "form-control sami" %>
              </div>
            </div>
            <div class="form-group fk">
