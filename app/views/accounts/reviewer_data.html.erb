        <% for user in @users %>
          <div class="col-md-4 user_rev" id="isad_<%= user.id %>">
            <div class="this_wt" style="background-image: url(<%= user.avatar_url(:tellme) unless user.avatar.nil? %>)">
              <div class="convd">
                <div class="vfde">
                  <ul class="list-inline pull-right">
                    <!-- <li class="email"><a href="#"><span class="fa fa&#45;pencil&#45;square&#45;o"></span></a></li> -->
                    <li class="email"><a href="#"><span class="fa fa-envelope"></span></a></li>
                    <li class="email"><a onclick="dellU(<%= user.id %>)" ><span class="fa fa-trash"></span></a></li>
                  </ul>
                </div>
                <div class="img_">
                  <% if !user.avatar.present? %>
                    <%= image_tag "default/default_profile.png", class: "bvgr" %>
                  <% else %>
                    <%= image_tag user.avatar_url(:thumbel), class: "bvgr" %>
                  <% end %>
                  <p class="name"><%= user.first_n.capitalize + " " + user.last_n.capitalize %></p>
                  <p class="email"><%= user.email.downcase %></p>
                  <% if user.leader? %>
                    <span class="lif">Leader of <%= user.team.name.capitalize %></span>
                  <% else %>
